<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zephyrworkshop.AegisProbabilityCalculator.TeamViewer.TeamViewer">

    <TextView android:text="Unit 0" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Unit0TV"
        android:textSize="25dp"
        android:layout_marginTop="73dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:visibility="invisible"
        android:enabled="false" />

    <TextView
        android:text="Unit 1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Unit1TV"
        android:textSize="25dp"
        android:layout_below="@+id/Unit0TV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        android:enabled="false" />

    <TextView
        android:text="Unit 2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Unit2TV"
        android:textSize="25dp"
        android:layout_below="@+id/Unit1TV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        android:enabled="false" />

    <TextView
        android:text="Unit 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Unit3TV"
        android:textSize="25dp"
        android:layout_below="@+id/Unit2TV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        android:enabled="false" />

    <TextView
        android:text="Unit 4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/Unit4TV"
        android:textSize="25dp"
        android:layout_below="@+id/Unit3TV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="25dp"
        android:visibility="invisible"
        android:enabled="false" />

    <TextView
        android:text="Team Name"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/TeamNameTV"
        android:textSize="30dp"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textStyle="bold" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Delete Team"
        android:id="@+id/deleteTeamBtn"
        android:layout_alignParentBottom="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:textColor="#ffff000e"
        android:onClick="deleteTeam" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Confirm Delete"
        android:id="@+id/deleteConfirmBtn"
        android:textColor="#ffff000e"
        android:onClick="confirmDeleteTeam"
        android:layout_toEndOf="@+id/deleteTeamBtn"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        android:layout_alignBottom="@+id/deleteTeamBtn"
        android:layout_alignTop="@+id/deleteTeamBtn"
        android:layout_toRightOf="@+id/deleteTeamBtn"
        android:enabled="false"
        android:visibility="invisible" />

    <Button
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Cancel"
        android:id="@+id/cancelDeleteBtn"
        android:onClick="cancelDelete"
        android:layout_toStartOf="@+id/deleteConfirmBtn"
        android:layout_alignBottom="@+id/deleteTeamBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignTop="@+id/deleteTeamBtn"
        android:visibility="invisible"
        android:enabled="false" />

    <ListView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/unitsLV"
        android:layout_toEndOf="@+id/Unit0TV"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/TeamNameTV"
        android:layout_above="@+id/deleteTeamBtn" />

</RelativeLayout>
