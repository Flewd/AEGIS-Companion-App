<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context="com.zephyrworkshop.AegisProbabilityCalculator.CardViewer.CardViewer">

    <TextView android:text="Card Viewer" android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/cardNameTV" />

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/imageView"
        android:src="@drawable/aegis_card_template"
        android:layout_alignParentBottom="true"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATZ-100"
        android:id="@+id/nameTV"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_marginTop="44dp"
        android:layout_below="@+id/movementTV"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/classTV"
        android:textStyle="bold"
        android:textSize="60dp"

        android:layout_below="@+id/cardNameTV"
        android:layout_toLeftOf="@+id/nameTV"
        android:layout_toStartOf="@+id/nameTV"
        android:layout_marginTop="80dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/movementTV"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_alignTop="@+id/classTV"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/energyTV"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_toEndOf="@+id/nameTV"
        android:layout_alignTop="@+id/movementTV"
        android:layout_toRightOf="@+id/nameTV"
        android:layout_marginLeft="21dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/integrityTV"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_marginBottom="27dp"
        android:layout_alignParentBottom="true"
        android:layout_alignLeft="@+id/energyTV"
        android:layout_alignStart="@+id/energyTV" />

</RelativeLayout>
