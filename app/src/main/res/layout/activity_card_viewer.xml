<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:layout_gravity="center_horizontal|center"
    tools:context="com.zephyrworkshop.AegisProbabilityCalculator.CardViewer.CardViewer">

    <ImageView
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:id="@+id/imageView"
        android:src="@drawable/aegis_card_template"
        android:adjustViewBounds="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="ATZ-100"
        android:id="@+id/nameTV"
        android:textStyle="bold"
        android:textSize="25dp"
        android:layout_gravity="center_vertical|center"
        android:layout_marginTop="170dp"
        android:layout_below="@+id/energyTV"
        android:layout_centerHorizontal="true" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="A"
        android:id="@+id/classTV"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_marginTop="13dp"
        android:layout_toStartOf="@+id/nameTV"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginLeft="60dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/integrityTV"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignParentBottom="true"
        android:layout_toRightOf="@+id/nameTV"
        android:layout_toEndOf="@+id/nameTV"
        android:layout_marginLeft="39dp"
        android:layout_marginBottom="38dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/energyTV"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_gravity="center_horizontal"
        android:layout_alignTop="@+id/classTV"
        android:layout_alignLeft="@+id/integrityTV"
        android:layout_alignStart="@+id/integrityTV" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="5"
        android:id="@+id/movementTV"
        android:textStyle="bold"
        android:textSize="60dp"
        android:layout_gravity="center_horizontal|bottom"
        android:layout_alignParentTop="true"
        android:layout_centerHorizontal="true"
        android:textColor="#ffffffff" />

</RelativeLayout>
